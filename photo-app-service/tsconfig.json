{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es2019",
    "lib": ["ES2019"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "outDir": "./built",
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "baseUrl": "."
  },
  "include": ["./src/**/*"]
}
